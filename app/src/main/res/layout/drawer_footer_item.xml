<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE">

    <ImageView
        android:id="@+id/footerSoundCloud"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/footerLooppad"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:src="@drawable/ic_social_soundcloud" />

    <ImageView
        android:id="@+id/footerTwitter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/footerLooppad"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/footerSoundCloud"
        android:src="@drawable/ic_social_twitter" />

    <ImageView
        android:id="@+id/footerYoutube"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/footerLooppad"
        android:layout_margin="3dp"
        android:layout_toRightOf="@+id/footerSoundCloud"
        android:src="@drawable/ic_social_youtube" />

    <ImageView
        android:id="@+id/footerGooglePlus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/footerLooppad"
        android:layout_margin="3dp"
        android:layout_toRightOf="@+id/footerYoutube"
        android:src="@drawable/ic_social_google" />

    <ImageView
        android:id="@+id/footerFacebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/footerLooppad"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/footerTwitter"
        android:src="@drawable/ic_social_facebook" />

    <ImageView
        android:id="@+id/footerLooppad"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_thelooppad" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/footerSoundCloud"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:alpha="0.54"
        android:text="Copyright Â© 2016 U&amp;U Software"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="8sp" />

</RelativeLayout>